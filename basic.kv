<Bstandart@MDBoxLayout>: #Стандартный бокс
    orientation: 'horizontal'
    padding: ["5dp", "5dp","5dp","5dp"]
    spacing: "5dp"
    pos_hint: {"center_x": .5, "top": 1}

<Lstandart@MDLabel>: #Текстовый элемент ввода данных
    theme_text_color: "Primary"
    spacing: "5dp"
    text_size: self.width, self.height
    valign: "top"

<LabelEnter@MDLabel>: #Текстовый элемент ввода данных
    font_style: "H6"
    theme_text_color: "Primary"
    spacing: "5dp"
    size_hint_y: None
    size_hint_y: "30dp"
#
MDScreen:
    title: "Калькулятор фигуры"
    MDToolbar:
        id: tb_upper
        title: "Калькулятор фигуры"
        type: "top"
        left_action_items: [["menu", lambda x: app.callback()]]
        right_action_items: [["exit-to-app", lambda x: app.stop()]]
        md_bg_color: [.99,.87,.45,1]# app.theme_cls.accent_color
        text_color: [.1,.1,.3,1]#app.theme_cls.accent_color
        specific_text_color: [.1,.1,.3,1]#
        elevation: 5
        pos_hint: {"top": 1, "center_x": .5}

    MDBoxLayout:
        id: bx_main # Основной бокс в котором расположено все кроме тулбара
        size_hint_y: None
        size_hint_y: 1.0 - tb_upper.height/root.height

        MDGridLayout: # корневой виджет включающий два основных горизонтальных элемента
            id: main_container
            rows: 2 #для вертикальной ориентации - смартфонов, этот параметр изменяется при запуске для планшетов и ПК
            cols: 1
            padding: "10dp"
            spacing: "10dp"

# ---------- 1) ЛЕВЫЙ ИЛИ ВЕРХНИЙ БЛОК: --------- РЕЗУЛЬТАТЫ
            MDCard: # ОСНОВНАЯ карточка или бокс
                id: cd_first
                pos_hint_y: 0 # pos_hint: {"center_x": .5, "top": 1}
                elevation: 2

                Bstandart: # 1ая ГЛАВНАЯ горизонтальная карточка | бокс
                    id: b_res_main_left
                    Bstandart: # ОСНОВНОЙ левый верхний блок
                        Lstandart:
                            id: l_res_main_left
                            text: "Результаты"
                            font_style: "H6"
                            pos_hint: {"center_x": .5, "top": 1}
                    Bstandart: # ОСНОВНОЙ правый верхний блок верхний блок
                        id: b_res_main_left
                        pos_hint: {"right": 1, "top": 1}
                        Lstandart:
                            id: l_res_main_right
                            text: "так себе"
                            font_style: "H6"
                            pos_hint: {"center_x": .5, "top": 1}
                            halign: "right"
                Bstandart: # 1ая НИЗ горизонтальная карточка | бокс
                    id: b_res_main_scale



# ---------- 2) ПРАВЫЙ ИЛИ НИЖНИЙ БЛОК: --------- ВВОД ПАРАМЕТРОВ
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                Bstandart:
                    orientation: "vertical"

                    MDBoxLayout: # Ввод роста
                        orientation: "horizontal"
                        Lstandart:
                            text: "Рост"
                        MDTextField: #
                            id: i_hheight
                    MDSlider:
                        min: 50
                        max: 260


                    Lstandart:
                        text: "Вес"
                    Lstandart:
                        text: "Обхват кисти"

# СТАНДАРТНЫЕ ЭЛЕМЕНТЫ ДЛЯ ВСЕГО ПРОЕКТА -----------------------
<Cstandart@MDCard>: # ОСНОВНАЯ карточка или бокс
    pos_hint: {"center_x": .5, "top": 1}
    padding: [dp(5), dp(5), dp(5), dp(5)]

<Bstandart@MDBoxLayout>: #Стандартный бокс
    orientation: 'horizontal'
    padding: [dp(5), dp(5), dp(5), dp(5)]
    spacing: dp(5)
    size_hint_y: None
    height: dp(50) #"30dp"

# БЛОК ТАЛИИ
<Bsubrow@MDBoxLayout>: #Стандартный бокс
    orientation: 'horizontal'
    padding: [dp(20), dp(0), dp(20), dp(0)]
    spacing: dp(0)
    size_hint_y: None
    height: dp(25) #"30dp"
<Lright2@MDLabel>: #Левый заголовок результатов
    font_size: dp(16)
    #font_style: "Body2"
    theme_text_color: "Custom"
    text_color:  app.col.selected
    halign: "right"
    valign: "bottom"
    size_hint_x: .2
<GrBar2@MDGridLayout>: # сетка для размещения баров
    cols: 3
    rows: 1
    size_hint_y: None
    height: self.minimum_height
    pos_hint: {"center_x": .5, "center_y": .5}
<LBar@MDLabel>:
    font_style: "Body2"
    padding_x: "3dp"
    size_hint_y: None
    height: "15dp"
    pos_hint: {"center_x": .5, "center_y": .5}

<Bnopad@MDBoxLayout>: #Бокс с минимальными границами
    padding: [dp(0), dp(0), dp(0), dp(0)]
    spacing: dp(5)
    size_hint_y: None
    height: self.minimum_height

<Lstandart@MDLabel>: #Текстовый элемент ввода данных
    theme_text_color: "Custom"#"Primary"
    text_color:  app.col.selected#app.c_selected # app.c_mrestext # app.c_white
    spacing: dp(10)
    text_size: self.width, self.height
    font_size: dp(16)
    pos_hint: {"center_x": .5, "top": 1}
    valign: "top"

<Lleft@MDLabel>: #Левый заголовок результатов
    font_style: "H6"
    theme_text_color: "Custom"
    text_color:  app.col.selected
    halign: "left"
    valign: "bottom"
    size_hint_x: .33

<Lcenter@MDLabel>: #Левый заголовок результатов
    font_style: "Body2"
    theme_text_color: "Custom"
    text_color:  app.col.selected
    halign: "right"
    valign: "bottom"
    size_hint_x: .33

<Lright@MDLabel>: #Левый заголовок результатов
    font_style: "Body2"
    theme_text_color: "Custom"
    text_color:  app.col.selected
    halign: "right"
    valign: "bottom"
    size_hint_x: .33

<L2left@MDLabel>: #Левый заголовок результатов
    font_style: "H6"
    theme_text_color: "Custom"
    text_color:  app.col.selected
    halign: "left"
    valign: "bottom"
    size_hint_x: .7

<L2right@MDLabel>: #Левый заголовок результатов
    font_style: "Body2"
    theme_text_color: "Custom"
    text_color:  app.col.selected
    halign: "right"
    valign: "bottom"
    size_hint_x: .3

<Lsmall@MDLabel>: #
    theme_text_color: "Custom"
    text_color: app.col.unselected
    spacing: dp(10)
    text_size: self.width, self.height
    font_size: dp(12)
    pos_hint: {"center_x": .5, "top": 1}
    halign: "center"
    valign: "top"

<LabelEnter@MDLabel>: #Текстовый элемент ввода данных
    font_style: "H6"
    theme_text_color: "Custom"
    text_color: app.col.darkgray
    spacing: "5dp"
    size_hint_y: None
    size_hint_y: "30dp"

<TInput@MDTextField>: #Текстовый элемент ввода данных
    icon_color: "primary"
    font_style: "Caption"
    hint_text_color: app.col.hint_text
    text_color: app.col.black
    input_filter: 'int'
    max_text_length: 12
    #helper_text: "Введите число > 0"
    helper_text_mode: "on_error"
    #padding: [2,2,2,2]
    pos_hint: {"center_y": 0.5,"right": 1}
    halign: "left"

# ОСНОВНОЙ РЕЗУЛЬТАТ -----------------------
<Lbmi@MDLabel>: #Текстовый элемент ввода данных
    theme_text_color: "Custom"
    text_color: app.col.white
    #font_style: "Caption"
    font_size: dp(10)
    #spacing: dp(5)
    text_size: self.width, self.height
    pos_hint: {"center_x": .5, "top": 1}
    valign: "top" #"middle"
    halign: "left"
<MDIstar@MDIcon>:
    icon: "star"
    halign: "left"
    valign: "center"
    font_size : dp(14)
<MDfigure@MDIcon>:
    icon: "star"
    halign: "center"
    valign: "center"
    color: app.col.lightray
    font_size : dp(30)


# Шкала навигации
                # ТЕКСТОВЫЕ ПОДПИСИ К ШКАЛЕ --------------------------------------
<BMIhints@MDBoxLayout>: # подписи к шкале BMI
    padding: [dp(20), dp(2), dp(20), dp(20)]
    spacing: dp(5)
    Lsmall:
        id: b_low
        text: "Худоба"
        text_color: app.col.lightblue
        halign: "left"
        size_hint_x: .45 #b_14bmi.width/root.width #+ b_16bmi.width
    Lsmall:
        id: b_norm
        text: "Норма"
        text_color: app.col.green
        size_hint_x: .65 #b_14bmi.width/root.width #+ b_16bmi.width
    Lsmall:
        id: b_high
        text: "Полнота"
        text_color: app.col.yellow
        size_hint_x: .5 #b_14bmi.width/root.width #+ b_16bmi.width
    Lsmall:
        id: b_fat
        text: "Ожирение"
        text_color: app.col.orange
        size_hint_x: 1.5 #b_14bmi.width/root.width #+ b_16bmi.width

#   Шкала BMI -----------------------------------------------
<BMIscale@MDBoxLayout>:
    size_hint_y: None
    height: dp(20)
    padding: [dp(20), dp(-15), dp(20), dp(2)]
    spacing: dp(0)
    Lbmi:
        id: "b_14bmi" # Недостаток массы тела 3ей степени, Анорексия <16
        text: "14"
        size_hint_x: .2
        md_bg_color: app.col.navy
    Lbmi:
        id: "b_16bmi" # Недостаток массы тела 2ей степени, 16-17
        text: "16"
        size_hint_x: .1
        md_bg_color: app.col.blue
    Lbmi:
        id: "b_17bmi" # Недостаток массы тела 1ей степени, 17-18.5
        text: "17"
        size_hint_x: .15
        md_bg_color: app.col.lightblue
    Lbmi:
        id: "b_19bmi" # Нормальная масса тела 18.5-25
        text: "18.5"
        size_hint_x: .65
        md_bg_color: app.col.green
    Lbmi:
        id: "b_25bmi" # Избыточная масса тела 25-30
        text: "25"
        size_hint_x: .5
        md_bg_color: app.col.yellow
    Lbmi:
        id: "b_30bmi" # Ожирение 1ой степени 30-35
        text: "30"
        size_hint_x: .5
        md_bg_color: app.col.orange
    Lbmi:
        id: "b_35bmi" # Ожирение 2ой степени 35-40
        text: "35"
        size_hint_x: .5
        md_bg_color: [1,.45,.2,1]
    Lbmi:
        id: "b_40bmi" # Ожирение 3ей степени >40
        text: "40"
        size_hint_x: .5
        md_bg_color: [1,.25,.2,1]


